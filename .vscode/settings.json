{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "prettier.printWidth": 80,
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "fcrespo82.markdown-table-formatter",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": true // 打开markdown文件的智能感知提示，解决markdown文件代码片段不生效问题
  },
  "markdown.extension.syntax.plainTheme": true,
  // 始终自动更新路径
  "javascript.updateImportsOnFileMove.enabled": "always",
  // 代码菜单的位置
  "workbench.sideBar.location": "left",
  "editor.suggestSelection": "first", // 默认选择推荐值的第一个
  // 检测文件没有头部注释，自动添加文件头部注释
  "fileheader.configObj": {
    "autoAdd": false
  },
  // 文件头部注释 com + shift + i && com + shift + i
  "fileheader.customMade": {
    "": "",
    "version": "0.0.1",
    "Author": "lixingjuan <xingjuan.li@hand-china.com>",
    "Date": "Do not edit",
    "copyright": "Copyright (c) 2019, Hand"
  },
  // 函数注释，com + shift + T && com + shift + T
  "fileheader.cursorMode": {
    "des ": "",
    "param": "",
    "return": ""
  },
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#fff",
      "backgroundColor": "#e16c96",
      "borderRadius": "5px"
    },
    {
      "text": "todo",
      "color": "#000",
      "backgroundColor": "#add5a2",
      "borderRadius": "2px"
    },
    {
      "text": "SEE-HERE:",
      "color": "#000",
      "backgroundColor": "#fa7e23",
      "borderRadius": "5px"
    },
    {
      "text": "？？",
      "color": "#fff",
      "backgroundColor": "#5bae23",
      "borderRadius": "5px"
    },
    {
      "text": "??",
      "color": "#fff",
      "backgroundColor": "#5bae23",
      "borderRadius": "5px"
    },
    {
      "text": "debugger",
      "color": "#000",
      "backgroundColor": "#fcd337",
      "borderRadius": "5px"
    }
  ],
  "markdown-table-formatter.markdownGrammarScopes": ["markdown", "vue"],
  "javascript.format.insertSpaceAfterSemicolonInForStatements": false,
  "debug.node.autoAttach": "off",
  // "pathAlias.aliasMap": {
  //   "@": "${cwd}/src",
  //   "comp@": "${cwd}/src/components",
  //   "com@": "${cwd}/src/common"
  // },
  "sync.gist": "824a5807444cb570c9c9cfbf85bed4ed",
  "prettier.eslintIntegration": true,
  "javascript.validate.enable": false,
  "files.associations": {
    // tab键自动补全html
    "*.vue": "vue",
    "*.tpl": "html" // Backbone 需要
  },
  "files.trimTrailingWhitespace": true,
  "emmet.triggerExpansionOnTab": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.hover.delay": 100,
  "workbench.iconTheme": "vscode-icons",
  "git.autofetch": true,
  "window.zoomLevel": 0,
  "workbench.editor.enablePreview": false,
  /* json转为type的配置 */
  "quicktype.justTypes": true,
  "quicktype.inferDateTimes": true,
  /* paste image 到markdown的路径配置 */
  // "pasteImage.path": "${projectRoot}/source/images",
  // "pasteImage.basePath": "${projectRoot}/source/images",
  // "pasteImage.path": "${currentFileNameWithoutExt}/",
  // "pasteImage.insertPattern": "{% asset_img ${imageFileName} %}",
  /* paste image 默认文件名称, 如果有该设置，则本地预览不行 */
  // "pasteImage.defaultName":"${currentFileNameWithoutExt}-YY-MM-DD-HH-mm-ss"
}
